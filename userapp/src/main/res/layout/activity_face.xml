<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_base"
    tools:context=".scanner.FaceActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <LinearLayout
            android:layout_width="465dp"
            android:layout_height="465dp"
            android:layout_marginTop="100dp"
            android:background="@color/white"/>

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:text="@string/selectionphoto"
            android:textStyle="bold"
            android:textSize="30sp"  />

        <ImageView
        android:id="@+id/imgView"
        android:layout_width="465dp"
        android:layout_height="465dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/ic_baseline_image_24"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="530dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp">

                <ImageView
                    android:id="@+id/circleBackround1"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:src="@drawable/round_button_background"/>

                <Button
                    android:id="@+id/btn_open"
                    android:layout_margin="6dp"
                    android:layout_width="63dp"
                    android:layout_height="63dp"
                    android:background="@drawable/ic_baseline_photo_camera_24"
                    app:backgroundTint="@color/white"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/circleBackround2"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:src="@drawable/round_button_background1"/>

                <Button
                    android:id="@+id/btn_gallery"
                    android:layout_margin="6dp"
                    android:layout_width="63dp"
                    android:layout_height="63dp"
                    android:background="@drawable/ic_baseline_galery_24"/>

            </RelativeLayout>
        </LinearLayout>

        <Button
            android:id="@+id/btn_upload"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Upload"
            android:layout_marginTop="630dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:backgroundTint="@color/purple_500" />

    </RelativeLayout>

</ScrollView>

